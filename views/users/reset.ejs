<%- include('../partials/header') %>

<div class = 'container'>
  <div style = 'width: 40%; margin: 0 auto;'>
    <form action = '/reset/<%= token %>' method = 'POST'>
      <legend>Reset Password</legend>
      <div class = 'form-group'>
        <label for = 'new_p'>New Password</label>
        <input class = 'form-control' type = 'password' name = 'new_p' placeholder="New Password">
      </div>
      <div class = 'form-group'>
        <label for = 'confirm_p'>New Password</label>
        <input class = 'form-control' type = 'password' name = 'confirm_p' placeholder="Confirm Password">
      </div>
      <div class = 'form-group'>
        <button class = 'btn btn-primary btn-block'>Update Password</button>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>